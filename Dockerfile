# Используем легкий образ Node.js
FROM node:20-alpine

# Создаем рабочую папку внутри контейнера
WORKDIR /app

# Копируем файлы зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем весь остальной код
COPY . .

# Открываем порт 3000
EXPOSE 3000

# Запускаем в режиме разработки
CMD ["npm", "run", "dev"]